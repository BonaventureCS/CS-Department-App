<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#7C2B1A"
    tools:context=".StartFrag" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Department Home"
        
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/directory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background = "#FFD700"
        android:textColor= "#FFFFFF"
        android:text="Directory" />

    <Button
        android:id="@+id/alumni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:background = "#FFD700"
        android:textColor= "#FFFFFF"
        android:text="Alumni" />

    <Button
        android:id="@+id/careers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:background = "#FFD700"
        android:textColor= "#FFFFFF"
        android:text="Careers" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/directory"
        android:layout_alignBottom="@+id/directory"
        android:layout_alignRight="@+id/careers"
        android:background = "#FFD700"
        android:textColor= "#FFFFFF"
        android:text="Button" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/careers"
        android:layout_alignParentRight="true"
        android:background = "#FFD700"
        android:textColor= "#FFFFFF"
        android:text="Button" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentRight="true"
        android:background = "#FFD700"
        android:textColor= "#FFFFFF"
        android:text="Button" />

</RelativeLayout>